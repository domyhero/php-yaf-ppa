#!/bin/sh
set -e

dpkg-maintscript-helper mv_conffile /etc/php5/conf.d/yaf.ini \
	/etc/php5/mods-available/yaf.ini 2.2.9-2~ -- "$@"

case "$1" in
    configure)
	php5enmod yaf
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
